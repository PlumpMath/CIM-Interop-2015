<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://camel.apache.org/schema/spring">
        <route id="CIMCore">
            <from uri="direct:CIMCore"/>
            <choice>
                <when>
                    <simple>${header.MessageRouterCallback} == null</simple>
                    <log loggingLevel="ERROR" message="No destination for message route"/>
                    <stop/>
                </when>
                <otherwise>
                    <to uri="direct:CIMHeaderValidation"/>
                </otherwise>
            </choice>
        </route>

        <route id="CIMHeaderValidationResult">
            <from uri="direct:CIMHeaderValidationResult"/>
            <wireTap uri="direct:CIMAudit">
                <setHeader headerName="TapLocation"><constant>Inbound</constant></setHeader>
            </wireTap>
            <to uri="direct:CIMSecurity"/>
        </route>

        <route id="CIMSecurityResult">
            <from uri="direct:CIMSecurityResult"/>
            <to uri="direct:CIMPayloadValidation"/>
        </route>

        <route id="CIMPayloadValidationResult">
            <from uri="direct:CIMPayloadValidationResult"/>
            <to uri="direct:CIMMessageRouter"/>
        </route>

        <route id="CIMMessageRouterResult">
            <from uri="direct:CIMMessageRouterResult"/>
            <to uri="direct:CIMDataAggregator"/>
        </route>

        <route id="CIMDataAggregatorResult">
            <from uri="direct:CIMDataAggregatorResult"/>
            <wireTap uri="direct:CIMAudit">
                <setHeader headerName="TapLocation"><constant>Outbound</constant></setHeader>
            </wireTap>
            <to uri="direct:CIMResponse"/>
        </route>
</routes>